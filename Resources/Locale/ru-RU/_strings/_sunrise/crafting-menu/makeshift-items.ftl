crafting-menu-name-WRE = wrench
crafting-menu-name-WIR = wirecutter
crafting-menu-name-SCR = screwdriver
crafting-menu-name-CRO = crowbar
crafting-menu-name-EXOXY = extended-capacity emergency oxygen tank
